    <script>
        $(document).ready(function(){
            var areas = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.whitespace,
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                prefetch: '../../Home/GetAreas'
            });

            $("#name").typeahead(null, {
                name: 'areas',
                source: areas
            });

            var convs = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.whitespace,
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                prefetch: '../../Home/GetConv'
            });

            $("#payment").typeahead(null, {
                name: 'convs',
                source: convs
            });
      });
    </script>

    <script>
        var Data = new Date();
        var Hora = Data.getHours();
        var DiaS = Data.getDay();

        if (DiaS == 0 || DiaS == 6) {
            if (Hora < 10 || Hora > 17) {
                $('.open-blink').append('<style>.open-blink{background-color:#a94442 !important} .open-blink:before{background-color:#a94442 !important}</style>');
            }
        } else {
            if (Hora < 9 || Hora > 21) {
                $('.open-blink').append('<style>.open-blink{background-color:#a94442 !important} .open-blink:before{background-color:#a94442 !important}</style>');
            }
        }       

    </script>

    <script>
        $("#Enviar").on('click', function () {
            event.preventDefault();

            $.ajax({
                url: '/Home/EnviaPedido',
                type: 'Post',
                data:{Nome:$('#Nome').val(), Email:$('#Email').val(), Telefone:$('#Telefone').val(), Subject: $('#dLabel').html()},
                success: function (dados) {
			
                    if (dados.success){
                        $('#modal1').modal('toggle');
                    }
               

                }, error: function (x, y, err) {
                    // alert("Operação não efetuada");
                }
            });
        });
    </script>
    

