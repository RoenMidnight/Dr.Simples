@model AplicacaoMedicina.Models.UsuarioLaboratorio

@{
    Layout = null;
}
<div class="modal-header">
    <h4>Trocar Senha de Usuário</h4>
</div>
<div class="modal-body">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>UsuarioConsultorio</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id_UsuLab)
            @Html.HiddenFor(model => model.Usuario_UsuLab)
            @Html.HiddenFor(model => model.ID_Labo)

            <div class="form-group">
                @Html.LabelFor(model => model.Senha_UsuLab, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Senha_UsuLab, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Senha_UsuLab, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Trocar Senha" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>